/* pages/score/result/result.wxss */

@import "animate.min.wxss";

.zan-btn{
    margin: 15px auto;
}

.btn-back{
  color: white;
  background-color: #10aeff;
}

.btn-share{
  color: white;
  background-color: #ffa32b;
}

.detailed-panel{
  margin: 0;
}

.detailed-panel > view .zan-cell__bd{
  text-align:left;
}

.no-score{
  height:100px;
  display:flex;
  justify-content:center;
  align-items:center;
}

.no-score > text{
  color:#aaa;
  font-size:20px;
}

.name-card-container{
  display: block;
  overflow: hidden;
  position: relative;
  width: calc(100% - 20px);
  height: 220px;
  background-color:white;
  border-radius:5px;
  margin:10px;
  box-shadow: inset 0 0 0 1px #81cded, 0 0 100px rgba(0, 0, 0, 0.1);
  animation: flipInX 0.5s ease-in 1 forwards 0.3s;
  /* opacity: 0; */
}

.name-card-top{
  height: calc(100%);
  width: calc(100% - 40px);
  padding: 15px 20px;
  background-color:#27AAE1;
}

.name-card-bottom{
  position: absolute;
  bottom: 0;
  width: calc(100%);
  background: #fff;
  border-radius: 0 0 5px 5px;
  box-shadow: inset 0 0 0 1px #81cded;
  opacity: 0;
  animation: fadeInUp 0.5s ease-in 1 forwards 1.3s;
}

.name-card-badge{
  background: #fff;
  color: #27AAE1;
  font-size: 12px;
  font-weight: 300;
  letter-spacing: 2px;
  text-transform: uppercase;
  padding: 5px 10px;
  border-radius: 5px;
  position: absolute;
  top: -10px;
  left: 15px;
}

.name-card-wrapper{
  padding: 15px 18px 12px;
  text-align: left;
}

.name-card-wrapper .text-line text{
  font-size: 12px;
  color: #27AAE1;
}

.name-card-wrapper .text-line text.text-content{
  font-size: 16px;
  color: rgb(31, 144, 192);
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.name-card-wrapper .text-right .text-line text.text-content{
  font-size: 16px;
}

.name-card-wrapper .text-right{
  display:block;
  left:calc(50% - 30px);
  position:absolute;
  top:15px;
}

.name-card-title{
  position:absolute;
  top:30px;
  color:white;
  font-weight:800;
  left:135px;
  font-size:32px;
  width:calc(100% - 160px);
  height:70px;
  display:flex;
  flex-flow:column;
  justify-content:center;
  z-index: 10;
}

.name-card-title .name-card-nickname{
  font-size:32px;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.name-card-title .name-card-nickname-wrapper{
  animation: bounceIn 0.8s ease-in 1 forwards 3.2s;
  opacity: 0;
}

.name-card-title .name-card-comment{
  font-size:16px;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.name-card-title .name-card-comment-wrapper{
  animation: fadeIn 0.8s ease-in 1 forwards 3.6s;
  opacity: 0;
}

.name-card-make-card{
  background-color:transparent;
  box-shadow:inset 0 0 0 1px white;
  color:white;
  padding:8px;
  font-size:20px;
  line-height:20px;
  margin:0 auto 10px 0;
}

.name-card-score{
  position:absolute;
  right:-11px;
  font-size:250px;
  top:-78px;
  z-index:1;
  color:rgba(255, 255, 255, 0.1);
  animation: fadeIn 0.5s ease-in 1 forwards 0.8s;
  opacity: 0;
}

.name-card-comment-input{
  font-size:16px;
  color:white;
}

.name-card-comment-input-placeholder{
  font-size:16px;
  color:white;
}

.avatar-wrapper{
  background-color: white;
  box-shadow: inset 0 0 0 1px white;
  left:-4px;
  position:relative;
  height: 100px;
  width: 100px;
  border-radius:100%;
  overflow: hidden;
  border:2px solid white;
  z-index: 10;
  animation: bounceIn 0.8s ease-in 1 forwards 2.8s;
  opacity: 0;
}

.avatar{
  background-color: white;
  /* box-shadow: inset 0 0 0 1px white; */
  height: 100px;
  width: 100px;
  z-index: 10;
}

.text-line{
  opacity: 0;
  height: 26px;
}

.text-line.first {
animation: bounceIn 0.8s ease-in 1 forwards 1.8s;
}

.text-line.second {
animation: bounceIn 0.8s ease-in 1 forwards 2s;
}

.text-line.third {
animation: bounceIn 0.8s ease-in 1 forwards 2.2s;
}

.text-line.fourth {
animation: bounceIn 0.8s ease-in 1 forwards 2.4s;
}

.text-title{
  width:36px;
}

.text-right .text-content{
  width:calc(60% - 30px);
}

.text-line{
  display:flex;
  align-content:bottom;
  justify-content:flex-start;
  align-items:flex-end;
}

.text-content{
  position:relative;
  top:1px;
}

@keyframes fadeInLeftSmall {
  from {
    opacity: 0;
    -webkit-transform: translate3d(-50%, 0, 0);
    transform: translate3d(-50%, 0, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}

